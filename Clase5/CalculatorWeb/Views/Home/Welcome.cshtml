@model CalculatorWeb.Models.UserModel

@using (Html.BeginForm("Create", "Home", FormMethod.Post))
{
    <link href="~/css/welcome.css" rel="stylesheet" /><div>
        @if (ViewBag.Error != null)
        {
            string msj = ViewBag.Error;
            @Html.Label(msj)
        }
    </div>

    <div>
        @Html.DisplayTextFor(model => model.Title)

        <div>
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "customText" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div>
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email, new { @class = "customText" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </div>

    <input type="submit" value="Empezar" />
}